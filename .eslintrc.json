{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": 0,
        "prefer-arrow-callback": 0,
        "one-var": [
            "error",
            "never"
        ],
        "func-names": 0,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 4
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "no-restricted-syntax": [
            "error",
            "ForInStatement",
            "ForOfStatement",
            "LabeledStatement",
            "WithStatement"
        ],
        "prefer-rest-params": 0
    }
}